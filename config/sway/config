    gsettings set org.gtk.Settings.FileChooser window-size '(300,500)'
    $gnome-schema gtk-theme 'Adwaita-dark'
    $gnome-schema icon-theme 'elementary-icon-theme'
    $gnome-schema cursor-theme 'elementary'
    $gnome-schema font-name 'IBM Plex Mono 11' 
}

